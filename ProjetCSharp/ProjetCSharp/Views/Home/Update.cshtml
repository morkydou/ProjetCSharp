@model Movies
@{
    ViewData["Title"] = "Update";
}
        <style type="text/css">
            select {
                border: 1px solid #cccccc;
                vertical-align: top;
                height: 30px;
            }
        </style>
        <h1>Edit a movie</h1>

        @using (Html.BeginForm("Edit", "Home", FormMethod.Post))
        {
            <table class="table table-striped; table table-responsive-sm">
                <tr>
                    
                    <th>Name</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th></th>
                </tr>

                <tr>
                    
                    <td>@Html.TextBoxFor(model => model.name)</td>
                    <td>@Html.TextBoxFor(model => model.description)</td>
                    <td>
                        @Html.DropDownListFor(model => model.status,
                                                    new SelectList(Enum.GetValues(typeof(Status))),
                                                    "Select status")
                    </td>
                    <td>@Html.TextBoxFor(model => model.id, new { style = "display:none", @Name = "" })</td>
                    <td><button type="submit" class="btn btn-primary" style="height:30px;text-align:center;font-size:small">Submit</button></td>
                </tr>
            </table>
        }

