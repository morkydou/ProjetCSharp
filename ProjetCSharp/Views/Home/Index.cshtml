@using ProjetCSharp.Models
@model IEnumerable<Movies>
@{
    ViewData["Title"] = "Home Page";
}

        <div class="text-center">
            <h1 class="display-4">Welcome</h1>
            <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        </div>


        <head>
            <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

        </head>


        <table class="table table-striped; table table table-responsive-sm">
            <tr>
                
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>

            @foreach (Movies movies in Model)
            {
  
                <tr class="account-row">
                    
                    <td>@movies.name</td>
                    <td>@movies.description</td>
                    <td>@movies.status</td>
                    <td><a asp-area="" asp-controller="Home" asp-action ="Details" asp-route-id="@movies.id">Details</a><b>|</b><a asp-area="" asp-controller="Home" asp-action="Update" asp-route-id="@movies.id">Edit</a> <b>|</b> <a asp-controller="Home" asp-action="Delete" asp-route-id="@movies.id">Delete</a></td>
                </tr>
                
            }
        </table>

        @using (Html.BeginForm("create", "home"))
        {
            <button class="btn btn-primary" type="submit">Add a movie to the list</button>
        }
